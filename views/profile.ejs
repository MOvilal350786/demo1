<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800">

    <form id="uploadform" hidden action="/upload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
        
    </form>

    <div class="flex items-center flex-col">
       
        
        <div class="relative">

<span id="uploadicon" class="bg-zinc-300 w-7 h-7 rounded-full absolute bottom-0 right-0 flex items-center justify-center">
    <i class="text-bg-800 ri-pencil-fill"></i>
</span>


            <div class="w-32 h-32 bg-cover overflow-hidden bg-zinc-300 rounded-full mt-20">
<img class="w-full h-full object-cover " src="/images/uploads/<%= user.profileImage %>" alt="profileImage">
            </div>

        </div>


       <h1 class="text-white m-2"><%= user.fullname %></h1>
       <h1 class="text-white m-1"><%= user.username %></h1>
       <h1 class="text-white m-1"><%= user.email %></h1>
    

       <a href="/edit" class="bg-zinc-200 rounded-lg px-10 py-2">Edit</a>
       <a href="/add" class="px-10 py-2 bg-red-700 rounded-lg m-5">Add New Pins</a>
     
    </div>



 
    
    
         
            
    <div class="p-10">
        <div class="w-[20vw] h-[15vw] rounded-lg  overflow-hidden text-white bg-cover hover:scale-110 ml-10 mb-10 ">
            <img class="object-cover bg-cover w-full h-full" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
            </div>
            <div class="hover:scale-110 w-[20vw] h-[3vw] ml-10 rounded-3xl  -mt-7 bg-green-500 flex items-center justify-center ">
        
                <a href="/show/posts" class="font-medium text-xl text-white p-2 whitespace-nowrap ">Click here</a>
                <h1 class="font-medium text-sm text-red-700"><%= user.posts.length %></h1>
        
    </div>           
   


    </div>
    

   
</div>
                        

        


  
    
    

</div>


<script>
document.querySelector("#uploadicon").addEventListener("click", function(){
    document.querySelector("#uploadform input").click();
})
document.querySelector("#uploadform input").addEventListener("change", function(){
    document.querySelector("#uploadform").submit();
})
</script>

